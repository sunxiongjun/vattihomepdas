<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <Spinner android:id="@+id/spinnerSection" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <EditText android:id="@+id/txtBarCode" android:layout_width="fill_parent" android:layout_height="wrap_content" android:ems="10">
        <requestFocus />
    </EditText>
    <Button android:textSize="25.0dip" android:id="@+id/btnScan" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="扫描" />
    <TextView android:textSize="25.0dip" android:id="@+id/labOrderNo" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="订单号" />
    <TextView android:textSize="25.0dip" android:id="@+id/labwhname" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="储位" />
    <TextView android:textSize="25.0dip" android:id="@+id/oderInfo" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="已扫描" />
    <TextView android:textSize="25.0dip" android:id="@+id/labPackge" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="包号" />
    <Button android:textSize="25.0dip" android:id="@+id/btnOrderDt" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="详细信息" />
    <TextView android:textSize="25.0dip" android:id="@+id/labScanInfo" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="" />
    <TextView android:textSize="15.0dip" android:id="@+id/showinfo" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="登陆用户名" />
</LinearLayout>
